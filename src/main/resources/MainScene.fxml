<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="anchorpane" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="program.controllers.MainAppController">
   <children>
      <Label layoutX="120.0" layoutY="43.0" text="Registrer deg her">
         <font>
            <Font size="33.0" />
         </font>
      </Label>
      <TextField fx:id="navn" layoutX="299.0" layoutY="110.0" />
      <TextField fx:id="alder" layoutX="299.0" layoutY="145.0" />
       <DatePicker fx:id="dato" layoutX="299.0" layoutY="187.0" prefHeight="26.0" prefWidth="149.0" />
      <TextField fx:id="epost" layoutX="299.0" layoutY="227.0" />
      <TextField fx:id="nummer" layoutX="299.0" layoutY="266.0" />
      <Label layoutX="211.0" layoutY="112.0" text="Navn">
         <font>
            <Font size="15.0" />
         </font>
      </Label>
      <Label layoutX="210.0" layoutY="147.0" prefHeight="21.0" prefWidth="37.0" text="Alder">
         <font>
            <Font size="15.0" />
         </font>
      </Label>
      <Label layoutX="76.0" layoutY="189.0" text="Fødselsdato (dd.mm.yyyy)">
         <font>
            <Font size="15.0" />
         </font>
      </Label>
      <Label layoutX="211.0" layoutY="229.0" text="Epost">
         <font>
            <Font size="15.0" />
         </font>
      </Label>
      <Label layoutX="189.0" layoutY="268.0" text="Nummer">
         <font>
            <Font size="15.0" />
         </font>
      </Label>
      <MenuBar layoutY="2.0" prefHeight="26.0" prefWidth="600.0">
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
                <MenuItem fx:id="apneFil" mnemonicParsing="false" onAction="#TrykketApneFil" text="Åpne fil" />
                <MenuItem fx:id="lagreFil" mnemonicParsing="false" onAction="#TrykketLagreFil" text="Lagre fil" />
            </items>
          </Menu>
            <Menu mnemonicParsing="false" text="Valider">
                <items>
                    <MenuItem fx:id="validerInput" mnemonicParsing="false" onAction="#Valider" text="Valider input" />
                </items>
            </Menu>
          <Menu mnemonicParsing="false" text="Edit">
            <items>
              <MenuItem mnemonicParsing="false" text="Delete" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Help">
            <items>
              <MenuItem mnemonicParsing="false" text="About" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
      <TableView fx:id="tableView" layoutX="48.0" layoutY="306.0" prefHeight="200.0">
        <columns>
            <TableColumn prefWidth="100.0" text="Navn">
                <cellValueFactory>
                    <PropertyValueFactory property="txtNavn" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn minWidth="0.0" prefWidth="100.0" text="Alder">
                <cellValueFactory>
                    <PropertyValueFactory property="intAlder" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn minWidth="0.0" prefWidth="100.0" text="Fødselsdato">
                <cellValueFactory>
                    <PropertyValueFactory property="intDato" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn minWidth="0.0" prefWidth="100.0" text="Epost">
                <cellValueFactory>
                    <PropertyValueFactory property="txtEpost" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn minWidth="0.0" prefWidth="100.0" text="Telefonnummer">
                <cellValueFactory>
                    <PropertyValueFactory property="txtTelefonnummer" />
                </cellValueFactory>
            </TableColumn>
        </columns>
      </TableView>
      <Button onAction="#trykkRegistrer" layoutX="449.0" layoutY="48.0" mnemonicParsing="false" prefHeight="38.0" prefWidth="136.0" text="Registrer" />
   </children>
</AnchorPane>
